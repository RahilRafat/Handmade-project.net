@model project_SWD.Models.comment
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: "Roboto", sans-serif;
            margin: 0;
            padding: 0;
            display: grid;
            min-height: 110vh;
            background-color: #f2dbbd;
        }

        .img-holder {
            background-image: url(../img/f.jpg);
            background-repeat: no-repeat;
            background-size: cover;
            height: 200px;
            border-radius: 10px 10px 0 0;
        }

        div.top {
            background-color: white;
            width: 50%;
            height: 100%;
            border-radius: 10px;
        }

        h3 {
            margin-top: 0;
            padding-top: 35px;
            color: white;
            font-weight: 850;
            text-align: center;
        }

        p {
            color: white;
            font-weight: 360;
            text-align: center;
        }

        form {
            margin: 30px 20px;
            position: relative;
        }

        .first-sec {
            margin-bottom: 20px;
            margin-left: 50px;
        }

        .second-sec {
            margin-bottom: 20px;
            margin-left: 50px;
        }

        .third-sec {
            margin-bottom: 20px;
            margin-left: 50px;
        }

        .fourth-sec {
            margin-bottom: 20px;
            margin-left: 50px;
        }

        span.last {
            position: absolute;
            color: #777;
        }

        label {
            color: #777;
        }

        .label-name {
            margin-right: 33px;
            color: #777;
        }

        label.label-email {
            margin-right: 35px;
        }

        label.label-phone {
            margin-right: 30px;
        }

        input {
            background-color: transparent;
            border: none;
            border-bottom: 2px solid black;
            padding-right: 100px;
            transition: 0.3s;
            padding: 10px 120px 10px 10px;
            margin-left: -4px;
        }

            input:focus {
                transition: 0.3s;
                outline: none;
                border-bottom: 2px solid #f7ba48;
            }

            input::-webkit-outer-spin-button,
            input::-webkit-inner-spin-button {
                -webkit-appearance: none;
                margin: 0;
            }

            input.last {
                margin-left: 80px;
                padding-bottom: 70px;
            }

        .btn {
            font-size: 19px;
            font-weight: 250;
            letter-spacing: 1px;
            padding: 13px 20px 13px;
            outline: 0;
            border: 1px solid black;
            cursor: pointer;
            position: relative;
            background-color: rgba(0, 0, 0, 0);
            transition: 0.3s;
            display: block;
            margin: auto;
        }

            .btn:hover {
                background-color: #bf9660;
                color: white;
            }
    </style>
</head>
<body>

    <div class="top">
        <div class="img-holder">
            <h3>Contact Us</h3>
            <p>If you want any thing send us message</p>

        </div>
        <div class="form">
            <form asp-action="contact" asp-controller="cont">
                <input type="hidden"  />
                <div class="first-sec">
                    <label  class="label-name">Name:</label>
                    <input class="booo" name="Name" id="Name" placeholder="Enter your name">
                </div>
                <div class="second-sec">
                    <label  class="label-email">Email:</label>
                    <input class="booo" name="Email" id="Email" placeholder="Enter your email">
                </div>
                <div class="third-sec">
                    <label  class="label-phone">Phone:</label>
                    <input class="fooo" name="phone" id="phone" placeholder="Enter your phone number">
                </div>
                <div class="fourth-sec">
                    <span class="last">Message:</span>
                    <input placeholder="Your Comment..." name="Message" id="Message
" class="last">
                </div>
                <input type="hidden" value="0" />
                <button class="btn">Send</button>
            </form>

            <form asp-action="Index" asp-controller="Home">
                <button class="btn" style="float:center">Back</button>
            </form>

        </div>
    </div>
</body>
</html>