<body>
    <div>
        <h2 class="title">@ViewBag.CatName</h2>
    </div>
    <div class="container">
        <div class="row-cols-4">
            <div class="col-md-3 mb-3">
                @foreach (var item in Model)
                {
                    <div>
                        @item.product_ID
                    </div>
                    <img class="img-card" src="~/img/@item.img" style="height:200px ;width:150px" />
                    <ul class="list-group">
                        <li class="list-group-item">@item.product_code</li>
                        <li class="list-group-item">@item.product_price</li>
                    </ul>
                }
            </div>
        </div>
        <form asp-action="sellerhome" asp-controller="SellerHome" dir="rtl">
            <input type="submit" value="Back" class="btn-dark" style="width:100px" />
        </form>
