@{
    Layout = null;
}

@model customer
<!DOCTYPE html>
<html>
<head>
    <title>Log In</title>
    <style>
        body {
            background-image: url('../img/log in.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            background-size: 100%
        }

        .top {
            width: 220px;
            background-color: rgb(161, 127, 69);
            opacity: 0.8;
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 3px;
            margin-top: 35px;
            margin-left: 40px;
        }

        form {
            width: 280px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 25px;
            padding: 20px;
            margin: 50px auto;
        }

        h2 {
            text-align: center;
        }

        label {
            display: block;
            font-size: 120%;
            margin-bottom: 8px;
        }

        input[type="text"],
        input[type="password"] {
            width: 95%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 20px;
            box-sizing: border-box;
            margin-bottom: 18px;
        }

        button[type="submit"] {
            background-color: #bfac80;
            color: #fff;
            border: none;
            padding: 8px;
            font-size: 15px;
            border-radius: 4px;
        }

            button[type="submit"]:hover {
                background-color: #45a049;
            }

        .h1 {
            font-size: 60px;
            font-weight: bold;
            color: white;
        }

        .h2 {
            color: white;
            font-size: 40px;
        }

        .icon {
            border: 1px solid white;
            border-radius: 10px;
            width: 25px;
            height: 28px;
            margin: 0 10px;
        }

    </style>
</head>
<body>

    <div style="float:left ; padding-left: 10%;padding-top: 11%; ">
        <h1 class="h1">
            <span>HANDICRAFT</span>
        </h1>
        <h2 class="h2">Turn your hobby into a business</h2>
    </div>

    <div style="  float: right ; padding-right: 15%;">

        <div class="top">
            <h2><font color="black" style=" font-size: 120%;"><b>Log in</b></font></h2>
        </div>

        <form asp-controller="login_Admin" asp-action="Index" style="background-color: rgb(161, 127, 69);;opacity: 0.8;">


            <label asp-for="Email"><font color="#2e1608" style=" font-size: 120%;"><b>Email: </b></font></label>
            <input asp-for="Email" type="text" id="Email" name="Email" placeholder="Enter your Email" required>

            <label asp-for="Password"><font color="#2e1608" style=" font-size: 120%;"><b>Password: </b></font></label>
            <input type="Password" id="Password" name="Password" placeholder="Enter your password" required>

            <center>
                <button type="submit"><font color="black"><b>LOG IN</b></font></button>
                <br>
                <br>
                <span><font color="white">or Login using</font></span>
                <br>
                <br>
                <a href="https://www.facebook.com/"><img class="icon" src="~/img/c.jpg"></a>
                <a href="https://twitter.com/"><img class="icon" src="~/img/d.jpg"></a>
                <a href="https://accounts.google.com"> <img class="icon" src="~/img/e.jpg"></a>
            </center>
        </form>
    </div>
</body>
</html>


